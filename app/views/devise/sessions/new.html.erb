<div class="login-wrap">
  <div class="moving-bg">
    <img src="http://t.cn/RXfE3eh" class="change">
  </div>
  <div class="registration-wrap">
    <div class="registration-block">
      <div class="content clearfix">
        <div class="right-part fr">
          <div class="devise">
            <h2><img src="http://t.cn/RXoDjGv"></h2>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "默认账号：1@1.com" %>
              <%= f.input :password, required: false, label: false, placeholder: "默认密码：111111" %>
              <%= f.input :remember_me, inline_label: '记住我！', label: false, as: :boolean if devise_mapping.rememberable? %>
              <div class="forget-password">
                <%= link_to "忘记密码啦？", new_password_path(resource_name) %><br/>
              </div>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "登录", class: "registration-btn" %>
            </div>
            <% end %>
            <div class="tip">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
